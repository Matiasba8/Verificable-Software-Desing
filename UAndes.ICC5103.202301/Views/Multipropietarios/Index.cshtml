@model IEnumerable<UAndes.ICC5103._202301.Models.MultipropietarioSet>

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm("Search", "Multipropietarios", FormMethod.Post))
{
@Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Búsqueda de Multipropietarios</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <label>Comuna</label>
    <div class="form-group">
        <div class="col-md-10">
            <input type="text" id="comuna" name="comuna" />
        </div>
    </div>

    <label>Manzana</label>
    <div class="form-group">
        <div class="col-md-10">
            <input type="text" id="manzana" name="manzana" />
        </div>
    </div>

    <label>Predio</label>
    <div class="form-group">
        <div class="col-md-10">
            <input type="text" id="predio" name="predio" />
        </div>
    </div>

    <label>Año</label>
    <div class="form-group">
        <div class="col-md-10">
            <input type="text" id="año" name="año" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Search" class="btn btn-default" />
        </div>
    </div>
</div>
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            RUT
        </th>
        <th>
            Porcentaje de Derechos
        </th>
        <th>
            Fojas
        </th>
        <th>
            Numero de Inscripcion
        </th>
        <th>
            Fecha de Inscripcion
        </th>
        <th>
            Año de Vigencia Inicial
        </th>
        <th>
            Año de Vigencia Final
        </th>
        <th>
            Comuna
        </th>
        <th>
            Manzana
        </th>
        <th>
            Predio
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.RUT)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PorcentajeDerechos)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Fojas)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NumeroInscripcion)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FechaInscripcion)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AñoVigenciaInicial)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AñoVigenciaFinal)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Comuna)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Manzana)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Predio)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
        @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
        @Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
    </td>
</tr>
}

</table>
